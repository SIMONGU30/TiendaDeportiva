<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <link href="~/menu.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="menu">

    <nav class="navbar navbar-expand-lg navbar-dark bg-black text-center text-white">
            <div @*class="d-flex align-items-center*@">
                <span class="titulo">Tienda Deportiva</span>
            </div>

            <div class="navbar-collapse collapse  text-center">
                <ul class=" nav navbar-nav">
                    <li class="bg-dark">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Inventario", "Index", "productos")</li>
                </ul>
            </div>  
    </nav>

    <div class="container-fluid body-content p-5">
        @RenderBody()
        <hr />
        <footer class="bg-dark  mt-4 p-3 ">
            <div class="container text-white">
                <div class="row">
                    <div class="col-12 col-md-4">
                        <p></p>
                        <p>&copy; @DateTime.Now.Year - Tienda Deportiva</p>
                        <p>Simon clavijo &copy;</p>
                        <p>simonclagutierrez@gmail.com</p>
                    </div>
                    <div class="col-12 col-md-4">
                        <p></p>
                        <p>&copy; @DateTime.Now.Year - Tienda Deportiva</p>
                        <p>Yovany lopez &copy;</p>
                        <p>yova.lopez1@gmail.com</p>
                    </div>
                    <div class="col-12 col-md-4">
                        <p></p>
                        <p>&copy; @DateTime.Now.Year - Tienda Deportiva</p>
                        <p>Edison mesa tapias &copy;</p>
                        <p>edisontapias2003@gmail.com</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>
